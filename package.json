{
  "name": "monopoly",
  "version": "1.0.0",
  "description": "Monopoly Game - Backend and Frontend",
  "private": true,
  "scripts": {
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "build:all": "cd backend && npm run build && cd ../frontend && npm run build",
    "start:pm2": "pm2-runtime start ecosystem.config.js",
    "start:pm2:dev": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "logs:pm2": "pm2 logs"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  }
}

